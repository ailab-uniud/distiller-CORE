<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation ="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
       
    <!-- Language detectors -->  
    <bean id="cybozu" class="org.uniud.dcore.wrappers.external.CybozuLanguageDetector"/>
    
    <!-- Annotators -->  
    <bean id="dantesplitter" 
          class="org.uniud.dcore.wrappers.linguisticutils.DanteSplitter"/>
    <bean id="stanford" 
          class="org.uniud.dcore.wrappers.external.StanfordBootstrapper" />
    <bean id="tagme" 
          class="org.uniud.dcore.annotation.TagMeAnnotator" />

    <!-- Preprocessors -->
    <bean id="engPreprocessor" class="org.uniud.dcore.engine.PreProcessor">
        <property name="languageTag" value="en"/>
        <property name="annotators">
            <list>
                <ref bean="stanford" />
                <ref bean="tagme" />
            </list>
        </property>
    </bean>
    
    <!-- N-gram generators -->
    <bean id="nGramGenerator"
          class="org.uniud.dcore.defaultImplementation.DefaultNGramGenerator" >
        <constructor-arg value="/"/>
        <constructor-arg value="en"/>          
    </bean>
    
    <!-- The main object, the distiller, that receives the beans defined above -->
    <bean id="distiller" class="org.uniud.dcore.engine.Distiller">
        <property name="languageDetector" ref="cybozu"/>
        <property name="preProcessors">
            <list>
                <ref bean="engPreprocessor"/>
            </list>
        </property>
    </bean>
   
</beans>