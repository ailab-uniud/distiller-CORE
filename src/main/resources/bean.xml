<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation ="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
       
    <!-- Language detectors -->  
    <bean id="cybozu" class="org.uniud.dcore.wrappers.external.CybozuLanguageDetector"/>
    
    <!-- Annotators -->  
    <!--<bean id="dantesplitter" 
          class="org.uniud.dcore.wrappers.linguisticutils.DanteSplitter"/>-->
    <bean id="stanford" 
          class="org.uniud.dcore.wrappers.external.StanfordBootstrapper" />
    <bean id="maxent" 
          class="org.uniud.dcore.wrappers.external.ItalianBootstapper"/>
    <bean id="tagme" 
          class="org.uniud.dcore.annotation.TagMeTokenAnnotator" />
    <bean id="tagmegram" 
          class="org.uniud.dcore.annotation.TagMeGramAnnotator" />
    <bean id="statistical" 
          class="org.uniud.dcore.annotation.StatisticalAnnotator"/>
    <bean id="syuzhet" 
          class="org.uniud.dcore.annotation.grams.SyuzhetAnnotator"/>

    <!-- Preprocessors -->
    <bean id="engPreprocessor" class="org.uniud.dcore.engine.PreProcessor">
        <property name="languageTag" value="en"/>
        <property name="annotators">
            <list>
                <ref bean="stanford" />
                <ref bean="tagme" />
            </list>
        </property>
    </bean>
    
    <bean id="itPreprocessor" class="org.uniud.dcore.engine.PreProcessor">
        <property name="languageTag" value="it" />
        <property name="annotators">
            <list>
                <ref bean="maxent" />
                <ref bean="tagme" />
            </list>
        </property>
    </bean>
    
    <!-- N-gram generators -->
    <bean id="nGramGenerator"
          class="org.uniud.dcore.generation.SimpleNGramGenerator" >
        <property name="gramLanguages">
            <list>
                <bean class="java.util.Locale">
                    <constructor-arg value="en" type="java.lang.String"/>
                </bean>
            </list>
        </property>    
    </bean>
    
    <!-- Evaluators -->
    <bean id="linearEvaluator"
          class="org.uniud.dcore.evaluation.LinearEvaluator">
        <property name="annotators">
            <list>
                <ref bean="statistical" />
                <ref bean="tagmegram" />
                <ref bean="syuzhet" />
            </list>
        </property>
        <property name="weights">
            <map key-type="java.lang.String" value-type="java.lang.Double">
                <entry value="0.15">
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.annotation.StatisticalAnnotator.DEPTH"/>
                    </key>
                </entry>
                <entry value="0.25">
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.annotation.StatisticalAnnotator.HEIGHT"/>
                    </key>                     
                </entry>
                <entry value="0.1">
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.annotation.grams.SyuzhetAnnotator.INTENSITY"/>
                    </key>                     
                </entry>
                <entry value="0.1">
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.annotation.StatisticalAnnotator.LIFESPAN"/>
                    </key> 
                </entry>
                <entry value="0.1">
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.annotation.StatisticalAnnotator.FREQUENCY"/>
                    </key>
                </entry>
                <entry value="0.3">
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.generation.SimpleNGramGenerator.NOUNVALUE"/>
                    </key>
                </entry>
                <entry value="0.1" >
                    <key>
                        <util:constant 
                            static-field="org.uniud.dcore.annotation.TagMeGramAnnotator.WIKIFLAG"/>
                    </key>
                </entry>
            </map>              
        </property>
    </bean>
    
    <!-- The main object, the Distiller, that receives the beans defined above -->
    <bean id="distiller" class="org.uniud.dcore.engine.Distiller">
        <property name="languageDetector" ref="cybozu"/>
        <property name="preProcessors">
            <list>
                <ref bean="engPreprocessor"/>
            </list>
        </property>
        
        <property name="gramGenerators">
            <list>
                <ref bean="nGramGenerator"/>
            </list>
        </property>
        
        <property name="evaluator" 
                  ref="linearEvaluator"/>
    </bean>
   
</beans>