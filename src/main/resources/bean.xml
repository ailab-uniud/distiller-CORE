<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
  <!-- Indica che il bean 'report' Ã¨ implementato da TxtReport -->
  <bean id="dantesplitter" class="org.uniud.dcore.wrappers.linguisticutils.DanteSplitter">
  </bean>
   
  <!-- associa il bean 'reportGenerator' al nostro ReportGenerator -->
  <bean id="reportGenerator" class="org.uniud.dcore.engine.Distiller">
    <!-- indica al setter 'report' del reportGenerator di riferirsi ad oggetti -->
    <!-- istanziati con il bean 'report' (quindi, in questo caso, TxtReport)-->
    <property name="splitter" ref="dantesplitter" />
  </bean>
   
</beans>