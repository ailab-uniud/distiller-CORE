<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation ="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
       
    <!-- Language detectors -->  
    <bean id="cybozu" class="org.uniud.dcore.wrappers.external.CybozuLanguageDetector"/>
    
    <!-- Annotators -->  
    <bean id="dantesplitter" 
          class="org.uniud.dcore.wrappers.linguisticutils.DanteSplitter"/>
    <bean id="stanford" 
          class="org.uniud.dcore.wrappers.external.StanfordBootstrapper" />
    <bean id="tagme" 
          class="org.uniud.dcore.annotation.TagMeAnnotator" />
    <bean id="statistical" 
          class="org.uniud.dcore.annotation.StatisticalAnnotator">
    </bean>

    <!-- Preprocessors -->
    <bean id="engPreprocessor" class="org.uniud.dcore.engine.PreProcessor">
        <property name="languageTag" value="en"/>
        <property name="annotators">
            <list>
                <ref bean="stanford" />
                <!--<ref bean="tagme" />-->
            </list>
        </property>
    </bean>
    
    <!-- N-gram generators -->
    <bean id="nGramGenerator"
          class="org.uniud.dcore.grams.SimpleNGramGenerator" >
        <property name="gramLanguages">
            <list>
                <bean class="java.util.Locale">
                    <constructor-arg value="en" type="java.lang.String"/>
                </bean>
            </list>
        </property>    
    </bean>
    
    <bean id="linearEvaluator"
          class="org.uniud.dcore.grams.LinearEvaluator">
        <property name="weights">
            <map key-type="java.lang.String" value-type="java.lang.Double">
                <entry key="Depth" value="0.15"/>
                <entry key="Height" value="0.25" />
                <entry key="LifeSpan" value="0.1"/> 
                <entry key="Freq" value="0.1" />
                <entry key="NounValue" value="0.3" />
                <entry key="Sense" value="0.1" />
            </map>              
        </property>
        <property name="annotators">
            <list>
                <ref bean="statistical" />
            </list>
        </property>
    </bean>
    
    <!-- The main object, the distiller, that receives the beans defined above -->
    <bean id="distiller" class="org.uniud.dcore.engine.Distiller">
        <property name="languageDetector" ref="cybozu"/>
        <property name="preProcessors">
            <list>
                <ref bean="engPreprocessor"/>
            </list>
        </property>
        <property name="gramGenerators">
            <list>
                <ref bean="nGramGenerator"/>
            </list>
        </property>
        <property name="evaluator" ref="linearEvaluator"/>
    </bean>
   
</beans>